<div class="section">
	<%= simple_form_for @user do |f| %>
	<div class="field">
		<div class="control">
			<%= f.input :firstname, input_html: { class: 'input', placeholder: 'First Name' }, wrapper: false, label_html: { class: 'label' }  %>
		</div>
	</div>
	<div class="field">
		<div class="control">
			<%= f.input :lastname, input_html: { class: 'input', placeholder: 'Last Name' }, wrapper: false, label_html: { class: 'label' }  %>
		</div>
	</div>
	<%= f.button :submit, class: "button is-primary" %>
	<% end %>
</div>