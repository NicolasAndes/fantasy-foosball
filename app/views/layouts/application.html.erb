<!DOCTYPE html>
<html>
  <head>
    <title>Fantasy Foosball</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="hero is-primary">
      <!-- Hero head: will stick at the top -->
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">
            <div class="navbar-brand">
              <%= link_to 'Fantasy Foosball', root_path, class: "navbar-item title" %>
              <span class="navbar-burger burger" data-target="navbarMenuHero">
                <span></span>
                <span></span>
                <span></span>
              </span>
            </div>
            <div id="navbarMenuHero" class="navbar-menu">
              <div class="navbar-end">
                
                <%= link_to 'User', users_path, class: "navbar-item" %>

                <%= link_to 'Teams', teams_path, class: "navbar-item" %>

                <%= link_to 'Match', matches_path, class: "navbar-item" %>
                
              </div>
            </div>
          </div>
        </nav>
      </div>
      
      <!-- Hero content: will be in the middle -->
      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title">
            <%= yield :page_title %>
          </h1>
        </div>
      </div>
    </section>
    
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
