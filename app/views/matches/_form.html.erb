<div class="section is-centered">
	<%= simple_form_for @match do |f| %>
	<div class="field">
		<div class="control">
			<%= f.input :name, input_html: { class: 'input', placeholder: 'Match Name' }, wrapper: false, label_html: { class: 'label' } %>
		</div>
	</div>

	<div class="columns">
		<div class="column"></div>
	  	<div class="column">
			<div class="field">
				<div class="control">
					<h1 class="title">Home Team</h1>
					<div class="select is-primary">
						<%= f.input :home_team_id, collection: Team.all.collect {|team| [team.name, team.id] }, label_method: :first, value_method: :second, prompt: "Select a Team", wrapper: false, input_html: { id: 'home', class: 'input' }, label: false %>
					</div>
				</div>
			</div>
	  	</div>
	  	<div class="column">
			<div class="field">
				<div class="control">
					<h1 class="title">Away Team</h1>
					<div class="select is-primary">
					<%= f.input :away_team_id, collection: Team.all.collect {|team| [team.name, team.id] }, label_method: :first, value_method: :second, prompt: "Select a Team", wrapper: false, input_html: { id: 'away', class: 'input' }, label: false %>
					</div>
				</div>
			</div>
	  	</div>
	  	<div class="column"></div>
	</div>
	
	<br>

	<%= f.button :submit, class: "button is-primary" %>

	<% end %>
</div>